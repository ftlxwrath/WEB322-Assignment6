<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>Countries</title>
</head>
<body>
    <!-- Component NAV BAR -->
    <%- include('partials/navbar', {page: '/un/countries'}) %>
    <!-- Component GRID SYSTEM -->
    <div class="container mx-auto p-4">
        <div class="overflow-x-auto">
            <table class="table table-zebra">

                <% countries.forEach(country=>{ %>
                <tr>
                    <td>
                        <div class="flex items-center gap-3">
                          <div class="avatar">
                            <div class="rounded h-24 min-w-40 shadow-xl">
                              <img src="<%=country.flag%>" alt="Avatar Tailwind CSS Component" />
                            </div>
                          </div>
                    </td>
                    <td>
                          <div>
                            <h1 class="font-bold"><%=country.name%></h1>
                            <a class="btn btn-primary" href="/un/countries?region=<%=country.region.name%>"><%=country.region.name%></a>
                          </div>
                        </div>
                    </td>
                    <td>
                        <strong>Population: </strong><%=country.population%> <strong>Capital: </strong> <%=country.capital%>
                    </td>
                    <td>
                        <th>
                            <a class="btn btn-ghost btn-xs" href="/un/countries/<%=country.a2code%>">details</button>
                          </th>
                    </td>
                  
                </tr>
              <% }) %>
            </table>

        </div>
      
    </div>
</body>
</html>